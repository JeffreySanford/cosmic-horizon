# ============================================================================
# Cosmic Horizons - Global Environment Configuration
# ============================================================================
# This file contains non-sensitive configuration shared across the monorepo.
# For sensitive data and local overrides, create .env.local (git-ignored).
#
# SEEDED TEST USERS FOR LOCAL DEVELOPMENT:
# Email: test@cosmic.local | Password: Password123! | Role: user
# Email: admin@cosmic.local | Password: AdminPassword123! | Role: admin
#
# Login: http://localhost:4200/auth/login
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=cosmic_horizons

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Development: Auth disabled (REDIS_PASSWORD empty)
# Production: Set strong password and uncomment --requirepass in docker-compose

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=true

# ============================================================================
# EVENT STREAMING: RABBITMQ & KAFKA
# ============================================================================
# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASS=your_rabbitmq_password

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_HOST=localhost
KAFKA_PORT=9092
KAFKAJS_NO_PARTITIONER_WARNING=1

# ============================================================================
# PULSAR EVALUATION (Phase 3.5 - Local Benchmarking)
# ============================================================================
# Set PULSAR_ENABLED=true to start Pulsar broker during start:all
# Local evaluation: docker compose -f docker-compose.events.yml -f docker-compose.pulsar.yml up -d --wait
# See: documentation/pulsar/ for complete setup guide

PULSAR_ENABLED=false
PULSAR_BROKERS=localhost:6650
PULSAR_ADMIN_URL=http://localhost:8080
PULSAR_MANAGER_URL=http://localhost:9527
PULSAR_NAMESPACES=public/cosmic-ai,public/observatories,public/metrics
PULSAR_TOPICS=job-submitted,job-status-changed,calibration-events,metrics,notifications,audit-trail,system-health,data-ingestion,inference-results

# ============================================================================
# API CONFIGURATION
# ============================================================================

API_PORT=3000
API_PREFIX=api
NODE_ENV=development

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

FRONTEND_PORT=4200
FRONTEND_URL=http://localhost:4200

# ============================================================================
# GITHUB OAUTH (SENSITIVE - Override in .env.local)
# ============================================================================

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# ============================================================================
# JWT SECRETS (SENSITIVE - Override in .env.local)
# ============================================================================

JWT_SECRET=your_jwt_secret_key_min_32_chars_long_change_this
JWT_EXPIRES_IN=7d

# ============================================================================
# COSMIC HORIZONS DATA API
# ============================================================================

COSMIC_HORIZONS_API_BASE_URL=https://api.cosmic-horizons.org
COSMIC_HORIZONS_API_TIMEOUT=30000

# ============================================================================
# AUDIT & CACHE
# ============================================================================

AUDIT_RETENTION_DAYS=90
REDIS_CACHE_TTL=86400

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=info
LOGS_REDIS_ENABLED=false

